<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">Reset Password</div>

            {{#if error}}
            <div class="container p-4">
                <div class="row">
                    <div class="col-md-4 mx-auto">
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{error}}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}

            <div class="card-body">
                <form method="POST" action="/passwordReset">
                    {{!-- csrf --}}

{{!-- //incluir token--}}                    <input type="hidden" name="resetLink" value="{{ resetLink }}">

                    <div class="form-group row">
                        <label for="email" class="col-md-4 col-form-label text-md-right">E-Mail Address</label>

                        <div class="col-md-6">
                            <input id="email" type="email" class="form-control {{#if error.email}} is-invalid {{/if}}" name="email" value="{{#if error.email }} {{error.email.value}} {{/if}}" required autocomplete="email" autofocus>

                            {{#if error.email}}
                                <span class="invalid-feedback" role="alert">
                                    <strong>{{ message }}</strong>
                                </span>
                            {{/if}}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="password" class="col-md-4 col-form-label text-md-right">New Password</label>

                        <div class="col-md-6">
                            <input id="password" type="password" class="form-control {{#if error.password}} is-invalid {{/if}}" name="password" required autocomplete="new-password">

                            {{#if error.password}}
                                <span class="invalid-feedback" role="alert">
                                    <strong>{{ message }}</strong>
                                </span>
                            {{/if}}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="password-confirm" class="col-md-4 col-form-label text-md-right">Confirm Password</label>

                        <div class="col-md-6">
                            <input id="password-confirm" type="password" class="form-control" name="password_confirmation" required autocomplete="new-password">
                        </div>
                    </div>

                    <div class="form-group row mb-0">
                        <div class="col-md-6 offset-md-4">
                            <button type="submit" class="btn btn-primary">
                                Reset Password
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
